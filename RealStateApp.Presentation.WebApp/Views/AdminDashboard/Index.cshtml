@using RealStateApp.Core.Application.ViewModels.Login
@{
    Layout = "_AdminLayout";
}
@model AdminDashboardVM;
<div class="container mt-4">
    <div class="card shadow-lg">
        <!-- Header -->
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Dashboard</h3>
        </div>

        <!-- Body -->
        <div class="card-body">
            <div class="row g-3">
                <!-- Properties -->
                <div class="col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header fw-bold">Properties</div>
                        <div class="card-body d-flex justify-content-between">
                            <span class="badge bg-success fs-6">
                                Available: @Model.AvailableProperties
                            </span>
                            <span class="badge bg-danger fs-6">
                                Sold: @Model.SoldProperties
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Agents -->
                <div class="col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header fw-bold">Agents</div>
                        <div class="card-body d-flex justify-content-between">
                            <span class="badge bg-success fs-6">
                                Active: @Model.ActiveAgents
                            </span>
                            <span class="badge bg-danger fs-6">
                                Inactive: @Model.InactiveAgents
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Clients -->
                <div class="col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header fw-bold">Clients</div>
                        <div class="card-body d-flex justify-content-between">
                            <span class="badge bg-success fs-6">
                                Active: @Model.ActiveClients
                            </span>
                            <span class="badge bg-danger fs-6">
                                Inactive: @Model.InactiveClients
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Developers -->
                <div class="col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header fw-bold">Developers</div>
                        <div class="card-body d-flex justify-content-between">
                            <span class="badge bg-success fs-6">
                                Active: @Model.ActiveDevelopers
                            </span>
                            <span class="badge bg-danger fs-6">
                                Inactive: @Model.InactiveDevelopers
                            </span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>