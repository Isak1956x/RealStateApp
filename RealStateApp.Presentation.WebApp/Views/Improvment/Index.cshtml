@using RealStateApp.Core.Application.ViewModels.PropertyImprovment
@model IEnumerable<ImprovmentReadVM>;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Property Types";
}

<div class="container mt-4">
    <div class="card mb-4 shadow">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Improvements</h5>
                <a asp-controller="Improvment" asp-action="New" class="btn btn-sm btn-light">
                    <i class="fas fa-plus"></i> New
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center mb-0">There's no property types registered'</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Propertis Linked</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pt in Model)
                            {
                                <tr>

                                    <td>@pt.Name</td>
                                    <td>@pt.Description</td>
                                    <td>@pt.PropertyCount</td>

                                    <td>


                                        <a asp-controller="Improvment" asp-action="Update" asp-route-Id="@pt.Id"
                                           class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-trash-alt"></i> Edit
                                        </a>
                                        <a asp-controller="Improvment" asp-action="Delete" asp-route-Id="@pt.Id"
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-edit"></i> Delete
                                        </a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>