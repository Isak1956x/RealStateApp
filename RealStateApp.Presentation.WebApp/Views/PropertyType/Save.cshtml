@using RealStateApp.Core.Application.ViewModels.PropertyTypes
@model PropertyTypeWriteVM;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	string title = "Update";
	string action = "Update";
	Layout = "_AdminLayout";
	if(Model.IsCreating)
	{
		title = "Create";
		action = "New";

	}
	ViewData["Title"] = $"{title} Property Type";
}

<div class="container mt-4">
	<div class="card shadow">
		<div class="card-header bg-primary text-white">
			<h5 class="mb-0">@ViewData["Title"]</h5>
		</div>
		<div class="card-body">
			<form asp-action="@action" method="post">
				<input type="hidden" asp-for="Id" />
				<div class="mb-3">
					<label asp-for="Name" class="form-label"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Description" class="form-label"></label>
					<textarea asp-for="Description" class="form-control" rows="3"></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="d-flex justify-content-between">
					<a asp-controller="PropertyType" asp-action="Index" class="btn btn-secondary">Back to List</a>
					<button type="submit" class="btn btn-primary">@title Property Type</button>
				</div>
			</form>
		</div>
	</div>
