@using RealStateApp.Core.Application.ViewModels
@model DeleteViewModel
@{

    Layout = "_AgentLayout";
    ViewData["Title"] = "Eliminar Propiedad";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow" style="max-width: 500px; width: 100%;">
        <div class="card-body text-center">
            <h3 class="card-title mb-4">¿Está seguro que desea eliminar esta propiedad?</h3>

            <form asp-action="Delete" method="post" class="d-flex justify-content-center gap-3">
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-danger px-4">Aceptar</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
            </form>
        </div>
    </div>
</div>