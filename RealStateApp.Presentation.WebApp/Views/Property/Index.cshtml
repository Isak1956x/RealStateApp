@using RealStateApp.Core.Application.ViewModels
@model List<PropertyViewModel>
@{
    ViewData["Title"] = "Home Page";
	Layout = "_AgentLayout";
}



<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Mantenimiento de Propiedades</h2>
        <a   asp-action="Create" class="btn btn-primary">+ Crear Nueva Propiedad</a>
    </div>

    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var propiedad in Model)
            {
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <img src="@propiedad.Images" class="card-img-top" alt="Imagen Propiedad">
                        <div class="card-body">
                            <h5 class="card-title">@propiedad.PropertyType!.Name</h5>
                            <p class="card-text mb-1"><strong>Precio:</strong> RD$ @propiedad.Price</p>
                            <p class="card-text mb-1"><strong>Tamaño:</strong> @propiedad.SizeInMeters m²</p>
                            <p class="card-text mb-1"><strong>Habitaciones:</strong> @propiedad.Bedrooms</p>
                            <p class="card-text mb-1"><strong>Baños:</strong> @propiedad.Bathrooms</p>
                            <div class="mt-auto d-flex justify-content-between">
                                <a asp-action="Edit" asp-route-id="@propiedad.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square me-1"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@propiedad.Id" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash me-1"></i> Eliminar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">No hay propiedades disponibles.</div>
            </div>
        }
    </div>
</div>
