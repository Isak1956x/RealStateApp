@using RealStateApp.Core.Domain.Enums

@{
    ViewData["Title"] = "Access denied";
    string currentRol = ViewBag.CurrentRol?.ToString() ?? "";
    string layout = "_GeneralLayout"; 
    string homeController = "Home"; 

    if (currentRol == UserRoles.Client.ToString())
    {
        layout = "_ClientLayout";
        homeController = "ClientHome";
    }
    else if (currentRol == UserRoles.Agent.ToString())
    {
        layout = "_AgentLayout";
        homeController = "AgentHome";
    }
   
    Layout = layout;
}

<div class="text-center">
    <h1 class="display-4">Access denied</h1>
    <p>
        Your user does not have permission to access this section -
        <a asp-controller="@homeController" asp-action="Index">
            <i class="bi bi-house-door"></i> Home
        </a>
    </p>
</div>
