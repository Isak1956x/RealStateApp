@using RealStateApp.Core.Application.ViewModels
@model UpdateUserViewModel

@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "_AgentLayout"; 
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0">Editar Perfil</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="UpdateAgent" asp-controller="Agents" method="post" enctype="multipart/form-data">
                        <input asp-for="PhotoPath" type="hidden" />

                      
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label fw-bold">Nombre</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Escriba su nombre" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                      
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label fw-bold">Apellido</label>
                            <input asp-for="LastName" class="form-control" placeholder="Escriba su apellido" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>

                      
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-bold">Teléfono</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Ej: +1 809 555 1234" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Photo" class="form-label fw-bold">Foto de usuario</label>
                            @if (!string.IsNullOrEmpty(Model.PhotoPath))
                            {
                                <div class="text-center mb-3">
                                    <img src="@Model.PhotoPath" alt="Foto actual"
                                         class="img-thumbnail rounded shadow-sm"
                                         style="max-height: 150px;" />
                                </div>
                            }
                            <input asp-for="Photo" class="form-control" accept="image/*" />
                            <small class="text-muted">Este campo es opcional</small>
                        </div>

                    
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-controller="AgentHome" asp-action="Index" class="btn btn-outline-secondary px-4">
                                ← Volver al Home
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                💾 Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>
</div>
